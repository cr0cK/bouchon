{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strict": true,
    "outDir": "build",
    "lib": ["es6", "es7", "dom"]
  },
  "exclude": ["dist", "build", "trash", "node_modules"]
}
